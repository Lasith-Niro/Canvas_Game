<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pushpika.canvas_game">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AnimationActivity" />
        <activity android:name=".Question_view" />
        <activity
            android:name=".database_data_entry_initial"
            android:label="@string/title_activity_database_data_entry_initial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".NewQuestionView" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".ExampleActivity" />
        <activity android:name=".HelpActivity"></activity>
    </application>

</manifest>